<div class="container">
  <nav>
    <ul>
      <li><h3><strong>Welcome, <span id="user">{{user.firstName}}</span></strong></h3></li>
    </ul>
    <ul>
      <li><a href="/io" role="button" >Chat</a></li>
      <li><a href="/products" role="button" >Products</a></li>
      <li><a href="/api/sessions/auth/logout" role="button" > Logout </a></li>
    </ul>
  </nav>
  {{#if user.isLoggedWithProvider}}
    <article>
    <p><strong><h3 style="display: inline;">First Name:</h3> </strong> <h5 style="display: inline;" >{{user.firstName}}</h5></p>
    <p><strong><h3 style="display: inline;">Username:</h3> </strong> <h5 style="display: inline;" >{{user.username}}</h5></p>
    <p><strong><h3 style="display: inline;">Provider:</h3> </strong> <h5 style="display: inline;" >{{user.provider}}</h5></p>
    <p><strong><h3 style="display: inline;">Role:</h3> </strong> <h5 style="display: inline;" >{{user.role}}</h5></p>
    <p><strong><h3 style="display: inline;">Email:</h3> </strong> <h5 style="display: inline;" >{{user.email}}</h5></p>
    <p><strong><h3 style="display: inline;">Age:</h3> </strong> <h5 style="display: inline;" >{{user.age}}</h5></p>
   </article>
  {{else}}
    <article>
    <p><strong><h3 style="display: inline;">First Name:</h3> </strong> <h5 style="display: inline;" >{{user.firstName}}</h5></p>
    <p><strong><h3 style="display: inline;">Last Name:</h3> </strong> <h5 style="display: inline;" >{{user.lastName}}</h5></p>
    <p><strong><h3 style="display: inline;">Role:</h3> </strong> <h5 style="display: inline;" >{{user.role}}</h5></p>
    <p><strong><h3 style="display: inline;">Email:</h3> </strong> <h5 style="display: inline;" >{{user.email}}</h5></p>
    <p><strong><h3 style="display: inline;">Age:</h3> </strong> <h5 style="display: inline;" >{{user.age}}</h5></p>
   </article>
  {{/if}}
  
  <hr>

  <h2>Total Cart: <span>$ <strong><ins>{{user.amount}}</ins></strong></span></h2> 

  <table>
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each car.products}}

    <tr>
      <td>{{this.product.title}}</a></td>
      <td>{{this.quantity}}</td>
      <td>{{this.product.price}}</a></td>
     <td><button  onclick="deleteItemFromCart('{{../car._id}}','{{this.product._id}}')"> delete </button></td>
      
    </tr>

    {{/each }}
  </tbody>
</table>
  <button onclick="test('{{car.products.product.title}}')" > Buy </button>
</div>
<script src="js/cart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
